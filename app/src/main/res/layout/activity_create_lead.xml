<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back"
    android:padding="8dp"
    android:layout_margin="15dp"
    tools:context="com.example.xshowroom.CreateLead">
    <TextView
        android:id="@+id/oname"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
       android:layout_margin="15dp"
        android:text="Opportunity :"
        android:textColor="@android:color/black"
        android:textSize="20sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"

        app:layout_constraintLeft_toRightOf="@+id/oname"
        app:layout_constraintBaseline_toBaselineOf="@+id/oname"


        >
        <TextView
            android:id="@+id/onamevalue"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="1234567890"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"

            />

    </ScrollView>


    <TextView
        android:id="@+id/crn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginTop="20dp"
        android:text="CRN :"
        android:textColor="@android:color/black"
        android:textSize="20sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oname" />

    <TextView
        android:id="@+id/crnvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567890"

        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/crn"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        android:layout_margin="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/crn"
         />

    <TextView
        android:id="@+id/asset"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Asset Id :"


        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crn"
        android:layout_margin="15dp"
        />

    <TextView
        android:id="@+id/assetvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567890"
        android:textSize="20sp"

        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/asset"

        app:layout_constraintTop_toBottomOf="@+id/crnvalue"
        android:layout_margin="15dp"
        />

    <TextView
        android:id="@+id/revenue"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Revenue :"

        android:textColor="@android:color/black"

        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/asset"
        android:layout_margin="15dp"
        />

    <TextView
        android:id="@+id/revenuevalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567890"
        android:textSize="20sp"

        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/revenue"

        app:layout_constraintTop_toBottomOf="@+id/assetvalue"
        android:layout_margin="15dp"
        />

    <TextView
        android:id="@+id/pdate"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:text="Purchased Date :"

        android:textColor="@android:color/black"
        android:layout_margin="15dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/revenue"
         />

    <TextView
        android:id="@+id/PDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567890"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/pdate"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/pdate"

        app:layout_constraintTop_toBottomOf="@+id/revenuevalue"
        android:layout_margin="15dp"
        />

    <TextView
        android:id="@+id/ddate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Delivery Date :"

        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdate"
        android:layout_margin="15dp"
        />
    <TextView
        android:id="@+id/Ddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567890"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/ddate"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/ddate"

        app:layout_constraintTop_toBottomOf="@+id/PDate"

        android:layout_margin="15dp"
         />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:textColor="@android:color/black"
        android:layout_height="30dp"
        app:srcCompat="@drawable/cal"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toRightOf="@+id/Ddate"
        app:layout_constraintTop_toBottomOf="@+id/PDate"/>

    <TextView
        android:id="@+id/Payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode Of Payment"
        android:textSize="20sp"
        android:textColor="@android:color/black"

        app:layout_constraintLeft_toRightOf="parent"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/ddate"
         />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/Payment"
        app:layout_constraintBaseline_toBaselineOf="@+id/Payment"
        android:layout_margin="15dp"
        android:tooltipText="@string/prompt"
        android:prompt="@string/prompt"
        android:entries="@array/array2"

        />

    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginBottom="8dp"
        android:background="#e53935"
        android:onClick="CreateLead"
        android:text="Proceed to Checkout"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Payment"
        app:layout_constraintVertical_bias="0.547" />
</android.support.constraint.ConstraintLayout>
