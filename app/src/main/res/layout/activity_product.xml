<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xshowroom.Product">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@android:color/white">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:text="Brand Name"
        android:textColor="#7C4DFF"
        android:textSize="24sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <android.support.v4.view.ViewPager
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:id="@+id/viewpager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TableLayout
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="25dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#E0E0E0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewpager">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="15dp"

            android:background="@drawable/cell"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

            <TextView
                android:id="@+id/model"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:background="@drawable/cell"
                android:fontFamily="casual"
                android:padding="10dp"
                android:text="Model"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/modelvalue"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:background="@drawable/cell"
                android:fontFamily="casual"
                android:padding="10dp"
                android:text="model"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />
        </TableRow>


        <TableRow
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:background="@drawable/cell"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

            <TextView
                android:id="@+id/color"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:background="@drawable/cell"
                android:fontFamily="casual"
                android:padding="10dp"
                android:text="Color"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/colorvalue"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:background="@drawable/cell"
                android:fontFamily="casual"
                android:padding="10dp"
                android:text="color"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="15dp"

            android:background="@drawable/cell"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

            <TextView
                android:id="@+id/engine"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:background="@drawable/cell"
                android:fontFamily="casual"
                android:padding="10dp"
                android:text="Engine"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/enginevalue"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:background="@drawable/cell"
                android:fontFamily="casual"
                android:padding="10dp"
                android:text="150cc"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="15dp"

            android:background="@drawable/cell"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

            <TextView
                android:id="@+id/Fuel"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:background="@drawable/cell"
                android:fontFamily="casual"
                android:padding="10dp"
                android:text="Fuel"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/fuelvalue"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:background="@drawable/cell"
                android:fontFamily="casual"
                android:padding="10dp"
                android:text="petrol"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="15dp"

            android:background="@drawable/cell"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

            <TextView
                android:id="@+id/mileage"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:background="@drawable/cell"
                android:fontFamily="casual"
                android:padding="10dp"
                android:text="Mileage"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/mileagevalue"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:background="@drawable/cell"
                android:fontFamily="casual"
                android:padding="10dp"
                android:text="mileage"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="15dp"

            android:background="@drawable/cell"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

            <TextView
                android:id="@+id/electric"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:background="@drawable/cell"
                android:fontFamily="casual"
                android:padding="10dp"
                android:text="Electric Start"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/electricvalue"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:background="@drawable/cell"
                android:fontFamily="casual"
                android:padding="10dp"
                android:text="yes"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="15dp"

            android:background="@drawable/cell"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

            <TextView
                android:id="@+id/price"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:background="@drawable/cell"
                android:fontFamily="casual"
                android:padding="10dp"
                android:text="Price"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/pricevalue"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:background="@drawable/cell"
                android:fontFamily="casual"
                android:padding="10dp"
                android:text="1,00,000"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="15dp"

            android:background="@drawable/cell"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

            <TextView
                android:id="@+id/gears"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:background="@drawable/cell"
                android:fontFamily="casual"
                android:padding="10dp"
                android:text="Gears"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/gearsvalue"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:background="@drawable/cell"
                android:fontFamily="casual"
                android:padding="10dp"
                android:text="5"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>

</ScrollView>
